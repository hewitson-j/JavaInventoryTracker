<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javainventorytracker.AddItemViewController">
   <children>
      <HBox alignment="CENTER" layoutX="107.0" layoutY="379.0" prefHeight="100.0" prefWidth="585.0" spacing="20">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save">
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel">
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <Label fx:id="addItemTitle" alignment="CENTER" layoutX="292.0" layoutY="48.0" prefHeight="17.0" prefWidth="215.0" text="Add Item" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="240.0" layoutY="83.0" prefHeight="35.0" prefWidth="320.0" text="Use this form to add a new item." />
      <TextField fx:id="productNameInput" layoutX="214.0" layoutY="178.0" prefHeight="47.0" prefWidth="371.0" promptText="Enter Product Name">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="productPriceInput" layoutX="214.0" layoutY="301.0" prefHeight="47.0" prefWidth="371.0" promptText="Enter Price">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label layoutX="226.0" layoutY="154.0" text="Product Name" />
      <Label layoutX="226.0" layoutY="275.0" text="Price" />
   </children>
</AnchorPane>
